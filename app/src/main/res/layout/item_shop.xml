<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/lyt_item"
              android:layout_width="match_parent"
              android:layout_height="@dimen/x250"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_shop"
        android:layout_width="@dimen/x250"
        android:layout_height="@dimen/y250"
        android:padding="@dimen/x20"
        android:scaleType="centerCrop"
        android:src="@color/appmsg_custom"/>

    <View
        android:layout_width="@dimen/x1"
        android:layout_height="match_parent"
        android:background="@color/gray_holo_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shopname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/x20"
                android:paddingStart="@dimen/x20"
                android:text="下沙物美店 NO.996"/>

            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"/>

            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:paddingEnd="@dimen/x20"
            android:paddingStart="@dimen/x20"
            android:text="下沙物美店 NO.996"/>

        <TextView
            android:id="@+id/tv_start_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:paddingEnd="@dimen/x20"
            android:paddingStart="@dimen/x20"
            android:text="下沙物美店 NO.996"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/gray_holo_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_haircut_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="@dimen/x20"
                android:paddingStart="@dimen/x20"
                android:text="理发师：2人"/>

            <TextView
                android:id="@+id/tv_shopkeeper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/x20"
                android:paddingStart="@dimen/x20"
                android:text="店主：2人"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>