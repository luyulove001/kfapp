<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xxl.kfapp.activity.home.boss.ShopTimeSetActivity">

    <com.xxl.kfapp.widget.TitleBar
        android:id="@+id/mTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x30"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_start"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/x80"
            android:background="@drawable/bg_corner_red"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/x80"
                android:padding="@dimen/x5"
                android:text="10:00"
                android:textSize="@dimen/x30"/>

            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/x80"
                android:src="@mipmap/qc_fast_calendar"/>
        </LinearLayout>


        <View
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x1"
            android:layout_marginEnd="@dimen/x30"
            android:layout_marginStart="@dimen/x30"
            android:background="@color/gray_holo_dark"/>

        <LinearLayout
            android:id="@+id/ll_end"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/x80"
            android:background="@drawable/bg_corner_red"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/x80"
                android:padding="@dimen/x5"
                android:text="10:00"
                android:textSize="@dimen/x30"/>

            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/x80"
                android:src="@mipmap/qc_fast_calendar"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
