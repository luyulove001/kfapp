<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/msg_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="17dp"
        android:src="@mipmap/msg_unread"/>

    <TextView
        android:id="@+id/msg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/msg_type"
        android:layout_marginStart="@dimen/x40"
        android:layout_toEndOf="@+id/msg_type"
        android:maxEms="18"
        android:singleLine="true"
        android:text="店铺转让"
        android:textSize="@dimen/x40"/>

    <TextView
        android:id="@+id/msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/msg_type"
        android:layout_marginEnd="@dimen/x40"
        android:maxEms="18"
        android:singleLine="true"
        android:text="03-01"
        android:textSize="@dimen/x35"/>

    <TextView
        android:id="@+id/msg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/msg_title"
        android:layout_below="@+id/msg_title"
        android:maxEms="18"
        android:singleLine="true"
        android:text="店铺转让"
        android:textSize="@dimen/x35"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/x20"
        android:src="@mipmap/arrow_right_gray"/>
</RelativeLayout>