<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/lyt_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_shop"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y200"
        android:layout_gravity="center"
        android:padding="@dimen/x20"
        android:src="@color/appmsg_custom"/>

    <View
        android:layout_width="@dimen/x1"
        android:layout_height="@dimen/y240"
        android:background="@color/gray_holo_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shopname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/x20"
                android:paddingStart="@dimen/x20"
                android:text="下沙物美店 NO.996"/>

            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"/>

            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingEnd="@dimen/x20"
            android:paddingStart="@dimen/x20"
            android:text="下沙物美店 NO.996"/>

        <TextView
            android:id="@+id/tv_start_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:paddingEnd="@dimen/x20"
            android:paddingStart="@dimen/x20"
            android:text="下沙物美店 NO.996"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x20"
            android:background="@color/gray_holo_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_viewcouont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/x20"
                    android:paddingStart="@dimen/x20"
                    android:text="围观次数：2次"/>

                <TextView
                    android:id="@+id/tv_bid_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/x20"
                    android:paddingStart="@dimen/x20"
                    android:paddingTop="@dimen/x10"
                    android:text="出价次数：50次"/>
            </LinearLayout>

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="@color/gray_holo_dark"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_countdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/x20"
                    android:paddingStart="@dimen/x20"
                    android:text="01:02:03"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/x40"/>

                <TextView
                    android:id="@+id/tv_bid_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableStart="@mipmap/main_icon_boy"
                    android:paddingEnd="@dimen/x20"
                    android:paddingStart="@dimen/x20"
                    android:text="距离开拍时间"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>