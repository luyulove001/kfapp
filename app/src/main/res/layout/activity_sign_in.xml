<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.xxl.kfapp.widget.TitleBar
        android:id="@+id/mTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_sign"
        android:layout_width="@dimen/x180"
        android:layout_height="@dimen/y180"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x40"
        android:background="@mipmap/qc_sign_ng"
        android:text="签到"
        android:textColor="@color/white"/>


    <LinearLayout
        android:id="@+id/ll_sign_result"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y180"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_dash_line"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_sign_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x5"
            android:text="签到成功"/>

        <View
            android:layout_width="@dimen/x600"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x5"
            android:background="@color/gray_holo_dark"/>

        <TextView
            android:id="@+id/tv_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:padding="@dimen/x5"
            android:text="恭喜你，今日上班签到成功！"/>

        <TextView
            android:id="@+id/tv_sign_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:padding="@dimen/x5"
            android:text="今日签到时间：16:00"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="@dimen/x30"
        android:background="@color/gray_holo_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/x10">

        <ImageView
            android:id="@+id/iv_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/qc_left_gray"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2016/10/10"
            android:textColor="@color/gray_holo_dark"/>

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/qc_right"
            android:scaleType="fitCenter"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@color/gray_holo_light"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日"
            android:textColor="#444444"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="一"
            android:textColor="#444444"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="二"
            android:textColor="#444444"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="三"
            android:textColor="#444444"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="四"
            android:textColor="#444444"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="五"
            android:textColor="#444444"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="六"
            android:textColor="#444444"/>

    </LinearLayout>

    <com.codbking.calendar.CalendarLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.codbking.calendar.CalendarDateView
            android:id="@+id/calendarDateView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_sign_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_red"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/x180"
                    android:layout_height="@dimen/y180"
                    android:background="@drawable/bg_cecle_red"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_sign_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="还没有记录"/>

                    <TextView
                        android:id="@+id/tv_in_state"
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x40"
                        android:layout_marginTop="@dimen/x5"
                        android:background="@drawable/bg_shape_corner_blue"
                        android:gravity="center"
                        android:paddingEnd="@dimen/x25"
                        android:paddingStart="@dimen/x25"
                        android:text="正常"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x25"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:padding="@dimen/x10"
                    android:text="上班签到"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/x180"
                    android:layout_height="@dimen/y180"
                    android:background="@drawable/bg_cecle_red"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_sign_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="还没有记录"/>

                    <TextView
                        android:id="@+id/tv_out_state"
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x40"
                        android:layout_marginTop="@dimen/x5"
                        android:background="@drawable/bg_shape_corner_red"
                        android:gravity="center"
                        android:paddingEnd="@dimen/x25"
                        android:paddingStart="@dimen/x25"
                        android:text="迟到"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x25"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:padding="@dimen/x10"
                    android:text="下班签退"/>
            </LinearLayout>
        </LinearLayout>
    </com.codbking.calendar.CalendarLayout>

</LinearLayout>
