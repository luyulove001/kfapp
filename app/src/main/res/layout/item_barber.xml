<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/y200"
              android:background="@color/white"
              android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/lyt_barber_info"
        android:layout_width="@dimen/x215"
        android:layout_height="match_parent">

        <talex.zsw.baselibrary.widget.CircleImageView
            android:id="@+id/iv_headpic"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y20"
            android:scaleType="centerCrop"
            android:src="@color/red_btn_bg_color"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_headpic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y10"
            android:drawablePadding="@dimen/x10"
            android:drawableStart="@mipmap/qc_fast_jf_bg"
            android:text="孔子"
            android:textColor="@color/black2"/>

        <TextView
            android:id="@+id/tv_staffno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y10"
            android:text="工号  001"
            android:textColor="@color/black2"/>

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@color/gray_holo_dark"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/x320"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y30"
            android:autoLink="phone"
            android:drawablePadding="5dp"
            android:drawableStart="@mipmap/qc_kaidain_call1"
            android:gravity="center"
            android:text="18868945281"
            android:textColor="@color/black2"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_centerInParent="true"
            android:background="@color/gray_holo_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/x100"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_checking_in"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="考勤情況"
                android:textColor="@color/black2"/>

            <TextView
                android:id="@+id/tv_performance"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="上班业绩"
                android:textColor="@color/black2"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@color/gray_holo_dark"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/x215"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y40"
            android:src="@mipmap/ic_shop"/>

        <TextView
            android:id="@+id/tv_shopname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginTop="@dimen/x130"
            android:gravity="center"
            android:maxLines="1"
            android:text="下沙物美店"
            android:textColor="@color/black2"/>
    </RelativeLayout>
</LinearLayout>