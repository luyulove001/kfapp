<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.xxl.kfapp.widget.TitleBar
        android:id="@+id/mTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginTop="@dimen/y30"
        android:background="@color/white">

        <EditText
            android:id="@+id/input_nickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/input_nickname"
            android:paddingEnd="@dimen/x20"
            android:paddingStart="@dimen/x30"
            android:textColor="@color/black2"/>

        <ImageView
            android:id="@+id/clear_nickname"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/x30"
            android:src="@mipmap/kf_close"
            android:visibility="visible"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_operate_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x30"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/x30">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/x1"
                android:layout_weight="1"
                android:background="@color/gray_holo_dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/x30"
                android:paddingStart="@dimen/x30"
                android:text="操作记录"/>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/x1"
                android:layout_weight="1"
                android:background="@color/gray_holo_dark"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/x360"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x20"
                android:paddingEnd="@dimen/x20"
                android:paddingStart="@dimen/x20"
                android:text="时间"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x20"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingEnd="@dimen/x20"
                android:paddingStart="@dimen/x20"
                android:text="店名"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x20"
                android:paddingEnd="@dimen/x20"
                android:paddingStart="@dimen/x20"
                android:text="操作人"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"/>
    </LinearLayout>
</LinearLayout>