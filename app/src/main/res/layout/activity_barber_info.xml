<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    tools:context="com.xxl.kfapp.activity.home.boss.ShopDetailActivity">

    <com.xxl.kfapp.widget.TitleBar
        android:id="@+id/mTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x30"
        android:paddingTop="@dimen/x30">

        <talex.zsw.baselibrary.widget.CircleImageView
            android:id="@+id/civ_head"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y120"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/x120"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_head"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x40"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/x10"
                android:text="姓名："
                android:textSize="@dimen/middle"/>

            <TextView
                android:id="@+id/tv_staffno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/x10"
                android:text="工号："
                android:textSize="@dimen/middle"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/x10"
                android:text="手机："
                android:textSize="@dimen/middle"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_red"
        android:orientation="vertical"
        android:paddingBottom="@dimen/x20"
        android:paddingEnd="@dimen/x10"
        android:paddingStart="@dimen/x10"
        android:paddingTop="@dimen/x20">

        <TextView
            android:id="@+id/tv_entrytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="手机："
            android:textSize="@dimen/middle"/>

        <TextView
            android:id="@+id/tv_idcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center_vertical"
            android:text="手机："
            android:textSize="@dimen/middle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_idcard_pos"
                android:layout_width="@dimen/x350"
                android:layout_height="@dimen/x210"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/iv_idcard_neg"
                android:layout_width="@dimen/x350"
                android:layout_height="@dimen/x210"
                android:layout_marginStart="@dimen/x20"
                android:scaleType="centerCrop"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
