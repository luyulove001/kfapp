<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xxl.kfapp.activity.person.OrderListActivity">

    <com.xxl.kfapp.widget.TitleBar
        android:id="@+id/mTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x20"
        android:background="@drawable/bg_dash_line"
        android:orientation="vertical"
        android:padding="@dimen/x10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x10"
            android:layout_marginStart="@dimen/x10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ticketno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/x5"
                android:text="票号：1882919342"/>

            <TextView
                android:id="@+id/tv_applysts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x20"
                android:padding="@dimen/x5"
                android:text="同意退票"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x40"
            android:layout_marginTop="@dimen/x10"
            android:padding="@dimen/x5"
            android:text="票号："/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x40"
            android:padding="@dimen/x5"
            android:text="票号："/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x40"
            android:padding="@dimen/x5"
            android:text="票号："/>

        <TextView
            android:id="@+id/tv_buytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x10"
            android:padding="@dimen/x5"
            android:text="购票时间："/>

        <TextView
            android:id="@+id/tv_apply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x10"
            android:padding="@dimen/x5"
            android:text="申请时间："/>

        <include layout="@layout/include_line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x10"
            android:padding="@dimen/x5"
            android:text="退票原因："/>

        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x10"
            android:padding="@dimen/x5"
            android:text="退票原因："/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x20"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_refuse"
            android:layout_width="@dimen/x280"
            android:layout_height="@dimen/y80"
            android:background="@drawable/bg_corner_red"
            android:text="拒绝"
            android:textColor="@color/text_black2"/>

        <Button
            android:id="@+id/btn_agree"
            android:layout_width="@dimen/x280"
            android:layout_height="@dimen/y80"
            android:layout_marginStart="@dimen/x80"
            android:background="@drawable/bg_corner_red"
            android:text="同意"/>
    </LinearLayout>
</LinearLayout>